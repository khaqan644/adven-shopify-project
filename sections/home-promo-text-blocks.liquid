                </div>
                {% endif%} 
                <div class="dt-sc-promo-block {{ section.settings.text_position}} {% if section.settings.reverse_column %}dt-sc-reverse-columns{% endif %}">    
                  {% if block.settings.title != blank  %}  
                  <h2 class="dt-sc-promo-heading">{{ block.settings.title }}</h2>
                  {% endif %} 

                  {% if block.settings.icon1 != blank and block.settings.desc1 != blank %}
                  <div class="dt-sc-promo-icon-block">
                    {% if block.settings.icon1 != blank %}
                    <div class="dt-sc-promo-icon-image">
                      {%- assign img_url = block.settings.icon1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
