                        {{ block.settings.icon3 | img_url: '480x480', scale: 2 | img_tag: block.settings.icon3.alt, 'dt-sc-noscript-image' }}
                      </noscript>
                    </div>          
                    {% endif%}     
                    <div class="dt-sc-promo-content">
                      {% if block.settings.desc3 != blank  %}  
                      <p class="dt-sc-promo-description"> {{ block.settings.desc3}}</p>
                      {% endif %}           
                    </div>
                  </div>
                  {% endif %} 
                </div>
              </div>
              {% endif %}

              {% if block.type == 'class' %}
              <div class="promo-blocks_center  swiper-slide">
