                    {% if block.settings.class1 != blank %}
                    <div class="dt-sc-promo-icon-image">
                      <i class="{{block.settings.class1}}"></i>
                    </div>
                    {% endif%}     
                    <div class="dt-sc-promo-content">           
                      {% if block.settings.desc1 != blank  %}  
                      <p class="dt-sc-promo-description"> {{ block.settings.desc1}}</p>
                      {% endif %}          
                    </div>
                  </div>
                  {% endif %}
                  
                  {% if block.settings.class2 != blank and block.settings.desc2 != blank %}
                  <div class="dt-sc-promo-icon-block">                  
                    {% if block.settings.class2 != blank %}
                    <div class="dt-sc-promo-icon-image">
                      <i class="{{block.settings.class2}}"></i>
                    </div>
                    {% endif%}     
                    <div class="dt-sc-promo-content">           
                      {% if block.settings.desc2 != blank  %}  
                      <p class="dt-sc-promo-description"> {{ block.settings.desc2}}</p>
                      {% endif %}          
                    </div>
                  </div>
                  {% endif %}
                  
                  {% if block.settings.class3 != blank and block.settings.desc3 != blank %}
                  <div class="dt-sc-promo-icon-block">                  
                  
                    {% if block.settings.class3 != blank %}
                    <div class="dt-sc-promo-icon-image">
                      <i class="{{block.settings.class3}}"></i>
                    </div>
                    {% endif%}     
                    <div class="dt-sc-promo-content">           
                      {% if block.settings.desc3 != blank  %}  
                      <p class="dt-sc-promo-description"> {{ block.settings.desc3}}</p>
