                   data-src="{{ img_1_url }}"
                   data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.promo_1.aspect_ratio }}"
                   data-sizes="auto"            
                   alt="{{ section.settings.promo_1.alt | escape }}">            
              <noscript>
                {{ section.settings.promo_1 | img_url: '480x480', scale: 2 | img_tag: section.settings.promo_1.alt, 'dt-sc-noscript-image' }}
              </noscript>
            </div>
            {% endif%}    
            {% if section.settings.promo_1_link != blank %}
          </a>
          {% endif %}
