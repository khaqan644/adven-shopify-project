          {% if section.settings.promo_1_link != blank %}
          <a href="{{section.section.promo_1_link}}">
            {% endif %}
            {% if section.settings.promo_1 != blank %}
            <div class="dt-sc-promo-icon-image">
              {%- assign img_1_url = section.settings.promo_1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
