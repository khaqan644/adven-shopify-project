  <style>
    
    {% unless section.settings.enable_overlay %}
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-section-wrapper { 
      background-color: var(--DTTertiaryColor); 
        background-color: {{ section.settings.background_color }};    
        }
    {% endunless %}

    {% if section.settings.enable_overlay %}  
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-overlay:before  { 
      color: var(--DTTertiaryColor); 
        color: {{ section.settings.background_color }};    
        background: currentcolor; 
        opacity: {{ section.settings.overlay_transparency }}; 
        }
    {% endif %}       

    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading { display: inline-block; max-width: 70%; width: 100%; }
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-main-heading { color: var(--DTColor_Heading); color:{{ section.settings.section_heading_color }}; font-size: 72px; } 
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-sub-heading { color: var(--DTPrimaryColor); color:{{ section.settings.section_sub_heading_color }}; } 
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-heading-description { color: var(--DTColor_Body); color:{{ section.settings.section_description_color }}; margin: 35px 0 25px; } 
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn { 
      background: var(--DT_Button_BG_Color); background:{{ section.settings.section_button_bg_color }}; 
        color: var(--DT_Button_Text_Color); color:{{ section.settings.section_button_text_color }}; 
          }
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn:hover { 
      background: var(--DT_Button_BG_Hover_Color); background:{{ section.settings.section_button_hover_bg_color }}; 
        color: var(--DT_Button_Text_Hover_Color); color:{{ section.settings.section_button_hover_text_color }}; 
          }
    
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn { background: none !important; color: var(--DT_Button_BG_Color); color: {{ section.settings.section_button_bg_color }}; font-size: var(--font-size-body); font-weight: 600; letter-spacing: 0.1em; position: relative; text-transform: uppercase; }
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn:not(:hover) { padding-left: 0; }
    
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn:before { border: 2px solid; border-color: var(--DTPrimaryColor); border-color: {{ section.settings.section_button_bg_color }}; content: ""; display: inline-block; height: 50px; margin: auto; position: absolute; bottom: 0; left: 100%; top: 0; width: 50px; border-radius: inherit; transition: var(--DTBaseTransition); z-index: -1; }
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn:after { background-color: var(--DTTertiaryColor); background-image: url({{ "shape-arrow-layer.png" | asset_url }}); background-repeat: no-repeat; background-size: 100% auto; content: ""; display: inline-block; height: 11px; margin-left: 10px; width: 52px; }
    
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn:not(:hover):before { border-radius: 0; transform: translateX(-50px); }
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn:hover:before { background: var(--DT_Button_BG_Hover_Color) !important; background:{{ section.settings.section_button_hover_bg_color }} !important; border-color: var(--DT_Button_BG_Hover_Color); border-color: {{ section.settings.section_button_hover_bg_color }}; left: 0; width: 100%; }
    #shopify-section-{{section.id}}.home-custom-section .dt-sc-heading .dt-sc-btn:hover:after { background-image: none; -webkit-mask-image: url({{ "shape-arrow-layer.png" | asset_url }}); mask-image: url({{ "shape-arrow-layer.png" | asset_url }}); -webkit-mask-repeat: no-repeat; mask-repeat: no-repeat; -webkit-mask-size: 100% auto; mask-size: 100% auto; }
    
    .home-custom-section .row .dt-sc-column { align-items: center; grid-gap: 80px; }
    .home-custom-section .custom-left_block .image-block { display: grid; grid-template-columns: 3fr 2fr; grid-gap: 80px; }
    .home-custom-section .custom-right_block .image-block { position: relative; }
    .home-custom-section .custom-right_block .image-block:before { background-image: url({{ "outdoor-adven-brand-icon.png" | asset_url }}); background-repeat: no-repeat; background-size: contain; content: ""; height: 167px; margin-top: -30px; margin-left: -90px; position: absolute; left: 0; top: 0; width: 186px; z-index: 1; transition: var(--DTBaseTransition); }
    .home-custom-section .custom-right_block:hover .image-block:before { transform: rotate(-15deg); }
    
    .home-custom-section .custom-left_block .image-block img:first-child { margin: 35px 0 0; animation: floating 10s -1s infinite paused; }
    .home-custom-section .custom-left_block .image-block img ~ img { margin: 110px 0 0; animation: floating-alt 10s -1s infinite paused; }
    
    
    .home-custom-section .custom-left_block:hover .image-block img:first-child,
    .home-custom-section .custom-left_block:hover .image-block img ~ img { animation-play-state: running; }
    
    .home-custom-section .image-block img { display: inline-block; position: relative; width: 100%; border-radius: var(--DTGutter_Width); transition: var(--DTBaseTransition); }
    
    @keyframes floating {
      0%, 100% { -webkit-transform: translateY(0%); }
      50% { -webkit-transform: translateY(25%); }
    } 
    
    @keyframes floating-alt {
      0%, 100% { -webkit-transform: translateY(0%); }
      50% { -webkit-transform: translateY(-25%); }
    }     
    
    @media only screen and (min-width: 768px) and (max-width: 1199px) {
      .home-custom-section .dt-sc-heading { max-width: 100% !important; }
      .home-custom-section .dt-sc-heading .dt-sc-main-heading { font-size: 60px !important; }
    }
    
    @media only screen and (min-width: 768px) and (max-width: 991px) {
    
      .home-custom-section .row .dt-sc-column { grid-template-columns: 1fr; }
      .home-custom-section .custom-right_block .image-block::before { margin: -20px !important; }
      
    }
    
    @media only screen and (max-width: 767px) {
    	.home-custom-section .custom-right_block .image-block:before { margin: 25px; }
    }


  </style>

