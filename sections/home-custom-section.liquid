{% if section.settings.enable_overlay %}
{% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}
{%- assign column = 'two-column' -%}

{% if section.settings.show_background_image %}
{% assign lazyScript = "lazyload" %}
{% endif %}
<div class="dt-sc-section-wrapper {{lazyScript}} {{section_overlay}} {% if section.settings.background_style == 'parallax' %} parallax-initiated{% endif %}" style="{% render 'bg-color-image-padding' %}" data-style="parallax" {{background_style}} {% include 'bg_image' %}>  
  <div class="{% render 'container-settings' %}"> 
    <div class="row {{ section.settings.custom_class_name }}"> 
      {% render 'section-heading', class: section.id %} 
      <div class="dt-sc-column {{column}}">
        <div class="custom-left_block">
          {% if section.settings.left_block_heading != blank or section.settings.left_block_sub_heading != blank or section.settings.left_block_description != blank or section.settings.left_block_button_link != blank %}
          <div class="dt-sc-heading {{ section.settings.heading_position | escape}}">
            {% if section.settings.left_block_sub_heading != blank %}
            <h3 class="dt-sc-sub-heading">{{section.settings.left_block_sub_heading}}</h3>
            {% endif %}            
            {% if section.settings.left_block_heading != blank %}
            <h2 class="dt-sc-main-heading">{{section.settings.left_block_heading}}</h2>
            {% endif %}
            {% if section.settings.left_block_description != blank %}
            <p class="dt-sc-heading-description">{{section.settings.left_block_description}}</p>
            {% endif %}
            {% if section.settings.left_block_button_link != blank  and section.settings.left_block_button_text != blank %}
            <a href="{{section.settings.left_block_button_link}}" class="dt-sc-btn">{{section.settings.left_block_button_text}}</a>
            {% endif %}
          </div>
          {% endif %}
          
          <div class="image-block">
            {% if section.settings.left_block_img_1 != blank  %}
            {%- assign left_img_1_url = section.settings.left_block_img_1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="lazyload"
                 data-src="{{ left_img_1_url }}"
                 data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                 data-aspectratio="{{ section.settings.left_block_img_1.aspect_ratio }}"
                 data-sizes="auto"            
                 alt="{{ section.settings.left_block_heading}}">            
            <noscript>
              {{ section.settings.left_block_img_1 | img_url: '480x480', scale: 2 | img_tag: section.settings.left_block_img_1.alt, 'dt-sc-noscript-image' }}
            </noscript>
            {% endif %}

            {% if section.settings.left_block_img_2 != blank  %}
            {%- assign left_img_2_url = section.settings.left_block_img_2 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="lazyload"
                 data-src="{{ left_img_2_url }}"
                 data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                 data-aspectratio="{{ section.settings.left_block_img_2.aspect_ratio }}"
                 data-sizes="auto"            
                 alt="{{ section.settings.left_block_heading}}">            
            <noscript>
              {{ section.settings.left_block_img_2 | img_url: '480x480', scale: 2 | img_tag: section.settings.left_block_img_2.alt, 'dt-sc-noscript-image' }}
            </noscript>
            {% endif %}
          </div>
            
        </div>
        
        <div class="custom-right_block">
          {% if section.settings.right_block_heading != blank or section.settings.right_block_sub_heading != blank or section.settings.right_block_description != blank or section.settings.right_block_button_link != blank %}
